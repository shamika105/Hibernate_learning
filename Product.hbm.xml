<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.pojo.Product" table="ProductTable">
<id name="pid" type="java.lang.Integer">
<generator class="sequence"/>  <!--for auto generation of id-->
</id>
<property name="pname" column="productName" length="20"/>
<property name="price"/>
</class>



</hibernate-mapping>
